#Server 2 – server2.py

import socket

HOST = "127.0.0.1"
PORT = 6001

def main():
    s = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
    s.bind((HOST, PORT))
    s.listen(1)
    print("Server2 listening on", (HOST, PORT))

    conn, addr = s.accept()
    print("Client connected:", addr)

    while True:
        data = conn.recv(1024)
        if not data:
            break
        text = data.decode()
        print("From client:", text)
        reply = "Server2 got: " + text
        conn.sendall(reply.encode())

    conn.close()
    s.close()

if __name__ == "__main__":
    main()
